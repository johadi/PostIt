{
  "name": "postit",
  "version": "1.0.0",
  "description": "andela bootcamp project ",
  "main": "index.js",
  "jest": {
    "rootDir": "client/src/__tests__"
  },
  "nyc": {
    "exclude": [
      "server/tests/seed"
    ]
  },
  "scripts": {
    "build:dev": "webpack-dev-server",
    "start:build": "webpack",
    "babel": "nodemon --watch server --exec babel-node -- app.js",
    "server": "nodemon app.js --exec babel-node --presets es2015",
    "start": "sequelize db:migrate && node app.js && --exec npm run build",
    "dev": "NODE_ENV=development && nodemon app",
    "apidoc": "apidoc -i server/routes/ -o public/apidoc",
    "test:dev": "NODE_ENV=test mocha --compilers js:babel-register server/tests/*.test.js",
    "test": "NODE_ENV=test sequelize db:migrate && nyc --reporter=html mocha --compilers js:babel-register server/tests/*.test.js && nyc report",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean-public": "npm run remove-public && mkdir production",
    "remove-public": "rimraf ./production",
    "build:html": "babel-node tools/buildHtml.js",
    "prebuild": "npm-run-all clean-public build:html",
    "build": "babel-node tools/build.js",
    "postbuild": "node tools/publicServer.js",
    "test:jest": "jest",
    "test:e2e": "nightwatch",
    "test:mocha": "mocha --reporter spec client/tests/setupMocha.js \"client/tests/**/*.spec.js\""
  },
  "apidoc": {
    "name": "PostIt API - Documentation",
    "template": {
      "forceLanguage": "en"
    }
  },
  "author": "jimoh hadi",
  "license": "ISC",
  "engines": {
    "node": "6.10.3"
  },
  "devDependencies": {
    "apidoc": "^0.15.1",
